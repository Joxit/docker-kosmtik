CMD=$1
if [ "$1" = "serve" ]; then
  ARGS="--host 0.0.0.0"
  PORT="-p 6789:6789"
fi

KOSMTIK_ENV="$(dirname $0)/env-kosmtik"
if [ -f "$KOSMTIK_ENV" ]; then
  source $KOSMTIK_ENV
fi

shift

ARGS="$ARGS $@"

docker run -ti --rm $PORT -v $(pwd):/opt/project -e USER_ID=1000 $KOSMTIK_OPTS joxit/kosmtik kosmtik $CMD $ARGS

